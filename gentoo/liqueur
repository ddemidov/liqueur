depend() {
    need sgemasterd
}

start() {
    ebegin "Starting liqueur"
    start-stop-daemon --start --exec /opt/liqueur/liqueur \
	--background --pidfile /var/run/liqueur.pid --make-pidfile
    eend $?
}

stop() {
    ebegin "Stopping liqueur"
    start-stop-daemon --stop --exec /opt/liqueur/liqueur \
	--pidfile /var/run/liqueur.pid
    eend $?
}
